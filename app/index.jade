    include jade-blocks/header.jade

    include jade-blocks/breadcrumbs.jade

    .page-content
      .container
        h1.page-content__heading Перфоратори
        .row
          .col-md-3
            aside.left-side
          .col-md-9
            .product-sort
            main
              .row
                .col-md-4
                  article.product
                    .product__img
                      img(src='http://placehold.it/220x174')
                    .product__code 82172
                    h2.product__name Перфоратор BOSCH BFG 3000
                    .product__in-stock На складі: 4 шт.
                    .product__old-price 2854.00 ГРН
                    .product__price 2530.00 ГРН

                .col-md-4
                .com-md-4


